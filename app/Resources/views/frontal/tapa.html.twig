{# plantilla de nuestra aplicacion #}
{% extends 'base.html.twig' %}

{# TITULO DE LA PAGINA #}
{% block titulo %}Nosotros{% endblock %}

{# CONTENIDO #}
{% block contenido %}


    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">Todas nuestras Tapas
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src={% if tapa.foto|length > 0 %}"{{ asset(tapaImg~tapa.foto) }}"{% else %}"http://placehold.it/700x400"{% endif %} alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">{{ tapa.nombre }}</h3>
            <p>{{ tapa.descripcion}}</p>
            <h3 class="my-3">Ingredientes:</h3>
            {{ tapa.ingredientes }}
        </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <h3 class="my-4">Otras Tapas</h3>

        <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
            <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}